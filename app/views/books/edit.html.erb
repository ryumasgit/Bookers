<h1>Editing Book</h1>

<% if @Book.errors.any? %>
  <%= @Book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @Book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @Book, url: book_path(id: @Book.id), method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to 'Show', book_path(@Book.id) %>
<%= link_to 'Back', '/books' %>

